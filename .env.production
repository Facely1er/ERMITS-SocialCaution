# Production Environment Variables
# Note: NODE_ENV is automatically set by Vite during build (production) or dev (development)
# Do not set NODE_ENV in .env files - Vite will ignore it and show a warning

# Frontend Configuration
VITE_API_URL=https://api.socialcaution.com/api
VITE_APP_NAME=Social Caution
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION=Privacy Protection Platform

# Supabase Configuration (Production)
VITE_SUPABASE_URL=${SUPABASE_URL}
VITE_SUPABASE_ANON_KEY=${SUPABASE_ANON_KEY}

# Analytics (Production)
VITE_GOOGLE_ANALYTICS_ID=${GOOGLE_ANALYTICS_ID}
VITE_SENTRY_DSN=${SENTRY_DSN}

# Feature Flags (Production)
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_ERROR_TRACKING=true
VITE_ENABLE_DEBUG_MODE=false

# Security
VITE_CSP_NONCE=${CSP_NONCE}
VITE_CSRF_TOKEN=${CSRF_TOKEN}

# Performance
VITE_ENABLE_PWA=true
VITE_ENABLE_OFFLINE_MODE=true